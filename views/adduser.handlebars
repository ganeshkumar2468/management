{{#if message}}
<div class="alert alert-success" role="alert">
  {{message}}
</div>
{{/if}}
<div class="text-center bg-dark text-white w-75 mx-auto mt-2">
    <h1>Please enter your details</h1>
</div>


<div class="conatiner w-50 mx-auto">
<form action="/adduser" method="post">
<div class="form-floating mb-3">
  <input type="text" name="fname" class="form-control" id="floatingInput" placeholder="name@example.com">
  <label for="floatingInput">First Name</label>
</div>
<div class="form-floating mb-3" >
  <input type="text" name="lname" class="form-control" id="floatingPassword" placeholder="Password">
  <label for="floatingPassword">Last Name</label>
</div>
<div class="form-floating mb-3">
  <input type="email" name="email" class="form-control" id="floatingPassword" placeholder="Password">
  <label for="floatingPassword">Email</label>
</div>
<div class="form-floating mb-3">
  <input type="phone" name="phone" class="form-control" id="floatingPassword" placeholder="Password">
  <label for="floatingPassword">Phone</label>
</div>
<div class="form-floating mb-3">
  <textarea class="form-control" name="comment" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
  <label for="floatingTextarea">Comments</label>
</div>
<div class="form-floating mb-3 d-grid">
  <input type="submit" name="submit" class="btn btn-success">
</div>
</form>
</div>