   <div class="text-center bg-dark text-white w-75 mx-auto mt-2">
    <h1>User Details</h1>
   </div>
   <table class="table table-dark table-striped mx-auto w-75 mt-2">

  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Comment</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each result}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td>{{this.comment}}</td>
      <td>
       <a href="/" type="button" class="btn btn-small btn-success">view
      <i class="bi bi-eye"></i></a>
             <a href="/" type="button" class="btn btn-small btn-success" style="background-color:purple">edit
      <i class="bi bi-pencil"></i></a>
             <a href="/" type="button" class="btn btn-small btn-success" style="background-color: red
             ;">delete
      <i class="bi bi-trash3"></i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>